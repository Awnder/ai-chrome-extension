{
    "manifest_version": 3,
    "name": "AI Chrome Extension",
    "version": "1.0",
    "description": "Extension that gives AI suggestions.",
    "action": {
        "default_popup": "popup/index.html"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "webNavigation",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "scripts/service-worker.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["scripts/content.js"]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    }
}
